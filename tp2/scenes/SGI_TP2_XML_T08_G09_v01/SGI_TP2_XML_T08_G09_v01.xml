<?xml version="1.0" encoding="UTF-16" standalone="yes"?>
<yaf> 
    <globals background="0 0 0 1" ambient="0 0 0 1" /> 

    <fog color="1.0 1.0 1.0 1.0" near="0.0" far="300.0" />

    <cameras initial="cam1" > 
        <perspective id="cam1" 
            angle="60" 
            near="0.1" 
            far="1000" 
            location="15 15 15" 
            target="0 0.0 0" /> 

        <orthogonal id="cam2" 
            near="0.1" 
            far="1000" 
            location="0 15 15" 
            target="0.0 15 0.0" 
            left="-5" 
            right="5" 
            bottom="-5" 
            top="-5" /> 
    </cameras> 

    <textures>        
        <texture id="wallTex" filepath="scenes/SGI_TP2_XML_T08_G09_v01/textures/wall.jpg" />
        <texture id="floorTex" filepath="scenes/SGI_TP2_XML_T08_G09_v01/textures/floor.jpg" />
        <texture id="bookshelfTex" filepath="scenes/SGI_TP2_XML_T08_G09_v01/textures/bookshelf.jpg" />
        <texture id="carpetTex" filepath="scenes/SGI_TP2_XML_T08_G09_v01/textures/carpet.jpg" />
        <texture id="tableTex" filepath="scenes/SGI_TP2_XML_T08_G09_v01/textures/table.jpg" />
        <texture id="paintingTex" filepath="scenes/SGI_TP2_XML_T08_G09_v01/textures/painting.jpg" />
        <texture id="clockTex" filepath="scenes/SGI_TP2_XML_T08_G09_v01/textures/clock.jpg" />
    </textures> 

    <materials> 
		<material id="wallApp" 
            emissive="0.0 0.0 0.0 1" 
			color="0.1 0.2 0.1 1.0" 
            specular="0 0 0 0" 
            shininess="0"
            textureref="wallTex"
            texlength_s="1" 
            texlength_t="1"
            twosided = "true" />

		<material id="floorApp" 
            emissive="0.0 0.0 0.0 1" 
            color="0.1 0.05 0 1.0"  
            specular="0 0 0 0" 
            shininess="0" 
            textureref="floorTex"
            texlength_s="1" 
            texlength_t="1"
            twosided = "true" />

        <material id="bookshelfApp" 
            emissive="0.0 0.0 0.0 1" 
            color="0.8 0.8 0.8 1.0"  
            specular="0 0 0 0" 
            shininess="0" 
            textureref="bookshelfTex"
            texlength_s="1" 
            texlength_t="1"
            twosided = "true" />

        <material id="bookshelfTopApp" 
            emissive="0.0 0.0 0.0 1" 
            color="0.05 0.05 0.05 1.0"  
            specular="0 0 0 0" 
            shininess="0" />

        <material id="carpetApp" 
            emissive="0.0 0.0 0.0 1" 
            color="0.2 0.1 0.1 1.0"  
            specular="0 0 0 0" 
            shininess="0"
            textureref="carpetTex"
            texlength_s="1" 
            texlength_t="1" />
        
        <material id="tableApp" 
            color="0.8 0.8 0.8 1.0" 
            emissive="0.0 0.0 0.0 0.0" 
			specular="0 0 0 0" 
            shininess="10" 
            textureref="tableTex" 
            texlength_s="1" 
            texlength_t="1" />

        <material id="paintingApp" 
            color="0.8 0.8 0.8 1.0" 
            emissive="0.0 0.0 0.0 0.0" 
			specular="0 0 0 0" 
            shininess="0" 
            textureref="paintingTex" 
            texlength_s="1" 
            texlength_t="1" />

        <material id="clockApp" 
            color="0.8 0.8 0.8 1.0" 
            emissive="0.0 0.0 0.0 0.0" 
			specular="0 0 0 0" 
            shininess="0" 
            textureref="clockTex" 
            texlength_s="1" 
            texlength_t="1" />
    </materials> 

    <graph rootid="scene"> 

		<node id="scene"> 
            <children> 
                <noderef id="leftWall" /> 
				<noderef id="rightWall" /> 
				<noderef id="floor" /> 
                <noderef id="bookshelf1" />
                <noderef id="bookshelf2" />
                <noderef id="carpet" />
                <noderef id="table" />
                <noderef id="jar" />

                <pointlight id="light1" enabled="true" 
                    color="0.5 0.6 0.8 1" 
                    intensity="700.0"
                    distance="5000"
                    decay="2.0"
                    castshadow="false"
                    position="18 10 18"
                /> 

                <pointlight id="light2" enabled="true" 
                    color="0.5 0.6 0.8 1" 
                    intensity="200.0"
                    distance="5000"
                    decay="2.0"
                    castshadow="false"
                    position="17 10 7"
                /> 

                <spotlight id="light3" enabled="true" 
                    color="1.0 1.0 1.0 1" 
                    intensity="500.0"
                    distance="1000"
                    decay="2.0"
                    castshadow="true"
                    position="8 10 6.5" 
                    target="8 0 6.5"
                    penumbra="1.0"
                    angle="20.0" 
                /> 

            </children> 
        </node>

		<node id="leftWall">
			<transforms>
				<translate value3="0 0 15" />
				<rotate value3="0.0 90 0.0" />
            </transforms> 

			<materialref id="wallApp" />
			
            <children>        
                <noderef id="painting" />     
                <primitive>
                    <rectangle xy1="0 0" xy2="15 8" />
                </primitive>
            </children> 
        </node>

		<node id="rightWall">
			<materialref id="wallApp" />
			
            <children>       
                <noderef id="clock" />      
                <primitive>
                    <rectangle xy1="0 0" xy2="15 8" />
                </primitive>
            </children> 
        </node>

		<node id="floor">
			<transforms>
				<translate value3="0 0 15" />
				<rotate value3="-90 0.0 0.0" />
            </transforms> 

			<materialref id="floorApp" />
			
            <children>             
                <primitive>
                    <rectangle xy1="0 0" xy2="15 15" />
                </primitive>
            </children> 
        </node>

        <node id="bookshelf1">
			<transforms>
				<translate value3="3 0 1" />
            </transforms> 

			<materialref id="bookshelfApp" />
			
            <children>     
                <noderef id="bookshelfTop1" />        
                <primitive>
                    <box xyz1="0 0 0" xyz2="10 5 2" />
                </primitive>
            </children> 
        </node>

        <node id="bookshelfTop1">
            <transforms>
                <translate value3="0 5.01 2" />
                <rotate value3="-90 0 0" />
            </transforms>

            <materialref id="bookshelfTopApp" />

            <children>
                <primitive>
                    <rectangle xy1="0 0" xy2="10 2" />
                </primitive>
            </children>
        </node>

        <node id="bookshelf2">
			<transforms>
				<translate value3="3 0 10" />
            </transforms> 

			<materialref id="bookshelfApp" />
			
            <children>             
                <noderef id="bookshelfTop2" />  
                <primitive>
                    <box xyz1="0 0 0" xyz2="10 5 2" />
                </primitive>
            </children> 
        </node>

        <node id="bookshelfTop2">
            <transforms>
                <translate value3="0 5.01 2" />
                <rotate value3="-90 0 0" />
            </transforms>

            <materialref id="bookshelfTopApp" />

            <children>
                <primitive>
                    <rectangle xy1="0 0" xy2="10 2" />
                </primitive>
            </children>
        </node>

        <node id="carpet">
            <transforms>
                <translate value3="4 0.01 8.5" />
                <rotate value3="-90 0 0" />
            </transforms>

            <materialref id="carpetApp" />

            <children>
                <primitive>
                    <rectangle xy1="0 0" xy2="8 4" />
                </primitive>
            </children>
        </node>

		<node id="table">
			<transforms>
				<translate value3="8 0 6.5" />
				<translate value3="0 0.95 0" />
				<scale value3="6 2 2.5" />
            </transforms> 

			<materialref id="tableApp" />
			
            <children>             
                <noderef id="tableTop" />
				<noderef id="leg1" />
				<noderef id="leg2" />
				<noderef id="leg3" />
				<noderef id="leg4" />
            </children> 
        </node>

		<node id="tableTop">
			<transforms>
				<translate value3="0 0.48 0" />
				<scale value3="1 0.08 1" />
            </transforms> 

            <children>             
                <noderef id="unitCube" />
            </children> 
        </node>

		<node id="unitCube">
            <children>            
				<!-- back -->
                <noderef id="rectangle1" /> 
				<!-- front -->
				<noderef id="rectangle2" /> 
				<!-- bottom -->
				<noderef id="rectangle3" />
				<!-- top -->
				<noderef id="rectangle4" />
				<!-- left -->				
				<noderef id="rectangle5" />
				 <!-- right -->
				<noderef id="rectangle6" />
            </children> 
        </node>

		<node id="rectangle1"> 
            <transforms>
				<translate value3="0 0 -0.5" />
				<rotate value3="0 180.0 0.0" />
            </transforms> 

            <children>   
                <primitive>          
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" />
                </primitive> 
            </children> 
        </node>
		
		<node id="rectangle2"> 
            <transforms>
				<translate value3="0 0 0.5" />
            </transforms> 

            <children>             
                <primitive>
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" /> 
                </primitive>
            </children> 
        </node>
		
		<node id="rectangle3"> 
            <transforms>
				<translate value3="0 -0.5 0" />
				<rotate value3="90 0.0 0.0" />
            </transforms> 

            <children>   
                <primitive>          
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" /> 
                </primitive>
            </children> 
        </node>
		
		<node id="rectangle4"> 
            <transforms>
				<translate value3="0 0.5 0" />
				<rotate value3="-90 0.0 0.0" />
            </transforms> 

            <children>             
                <primitive>
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" /> 
                </primitive>
            </children> 
        </node>
		
		<node id="rectangle5"> 
            <transforms>
				<translate value3="-0.5 0 0" />
				<rotate value3="0.0 -90.0 0.0" />
            </transforms> 

            <children>             
                <primitive>
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" /> 
                </primitive>
            </children> 
        </node>
		
		<node id="rectangle6"> 
            <transforms>
				<translate value3="0.5 0 0" />
				<rotate value3="0.0 90.0 0.0" />
            </transforms> 

            <children>             
                <primitive>
                    <rectangle xy1="-0.5 -0.5" xy2="0.5 0.5" /> 
                </primitive>
            </children> 
        </node>

    	<node id="leg">
			<transforms>
				<scale value3="0.06 0.92 0.06" />
            </transforms> 

            <children>             
                <noderef id="unitCube" />
            </children> 
        </node>

		<node id="leg1">
			<transforms>
				<translate value3="0.45 0 0.42" />
            </transforms> 

            <children>             
                <noderef id="leg" />
            </children> 
        </node>
		
		<node id="leg2">
			<transforms>
				<translate value3="0.45 0 -0.42" />
            </transforms> 

            <children>             
                <noderef id="leg" />
            </children> 
        </node>
		
		<node id="leg3">
			<transforms>
				<translate value3="-0.45 0 0.42" />
            </transforms> 

            <children>             
                <noderef id="leg" />
            </children> 
        </node>
		
		<node id="leg4">
			<transforms>
				<translate value3="-0.45 0 -0.42" />
            </transforms> 

            <children>             
                <noderef id="leg" />
            </children> 
        </node>

        <node id="painting">
            <transforms>
                <translate value3="6 3 0.01" />
            </transforms>

            <materialref id="paintingApp" />

            <children>
                <primitive>
                    <rectangle xy1="0 0" xy2="5 3" />
                </primitive>
            </children>
        </node>

        <node id="clock">
            <transforms>
                <translate value3="8 6.5 0.01" />
                <rotate value3="90 0 0" />
            </transforms>

            <materialref id="clockApp" />

            <children>
                <primitive>
                    <cylinder base="1"
                        top="1"
                        height="0.1"
                        slices="30"
                        stacks="30" />
                </primitive>
            </children>
        </node>

    </graph> 
</yaf> 